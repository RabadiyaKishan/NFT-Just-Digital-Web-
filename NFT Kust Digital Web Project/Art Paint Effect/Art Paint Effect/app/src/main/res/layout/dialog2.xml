<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/background_color"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/twozero">

            <TextView
                android:id="@+id/txtmsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="Do you want to reset?"
                android:textColor="#fff"
                android:textSize="20sp"
                android:typeface="serif" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/onezero"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btyesss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/buttoonshap"
                android:shadowColor="#a8a8a8"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="5.0"
                android:text="Yes"
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnooo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/threezero"
                android:background="@drawable/buttoonshap"
                android:shadowColor="#a8a8a8"
                android:shadowDx="0.0"
                android:shadowDy="0.0"
                android:shadowRadius="5.0"
                android:text="No"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
